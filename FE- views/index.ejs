<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Taskifyr</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
  <header>
    <h1>Taskifyr</h1>
  </header>
  <main>
    <ul id="taskList">
      <% tasks.forEach((task) => { %>
        <li>
          <a href="/tasks/<%= task.id %>">
            <%= task.title %>
          </a>
        </li>
      <% }); %>
    </ul>
    <a href="/tasks/create">Create Task</a>
  </main>
  <footer>
    <p>Â© Taskifyr</p>
  </footer>
</body>
</html>
